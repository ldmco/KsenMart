<?xml version="1.0" encoding="UTF-8" ?>
<extension type="plugin" group="kmplugins" version="3.1" method="upgrade">
    <name>KSM_PLUGIN_CBRF</name>
    <creationDate>May 2017</creationDate>
    <author>L.D.M. Co</author>
	<authorEmail>boss.ldm@gmail.com</authorEmail>
    <authorUrl>http://www.lukyan-dm.ru/</authorUrl>
	<copyright>Copyright (C) 2008-2017 L.D.M. Co All rights reserved.</copyright>
    <license>https://creativecommons.org/licenses/by-sa/3.0/deed.ru CC BY-SA 3.0</license>
    <version>4.1.11</version>
    <description>KSM_PLUGIN_CBRF_DESCRIPTION</description>

    <files>
		<filename plugin="cbrf">cbrf.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>sql</folder>
		<folder>assets</folder>
    </files>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
	
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>	
    
    <languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_kmplugins_cbrf.sys.ini</language>
    </languages>
	
    <config>
        <fields name="params">
		
            <fieldset name="basic">
			
            </fieldset>
	
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="cbrf">http://update.ksenmart.ru/update-info/j3/pkg_ksenmart_4/com_ksenmart/plugins/plg_cbrf-update.xml</server>
    </updateservers>
	
</extension>